{
  "name": "kroi-auto-center-clean",
  "version": "0.2.0",
  "description": "Clean, modern auto center website with Sanity CMS",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=1024' next build",
    "build:analyze": "ANALYZE=true NODE_OPTIONS='--max-old-space-size=1024' next build",
    "build:production": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=1024' next build",
    "start": "next start --hostname 0.0.0.0 --port ${PORT:-3000}",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --chrome-flags='--headless'",
    "perf:audit": "npm run build:production && npm start & sleep 10 && npm run lighthouse && pkill -f 'next start'"
  },
  "dependencies": {
    "@sanity/client": "^6.21.3",
    "@sanity/image-url": "^1.0.2",
    "@sanity/vision": "^3.57.4",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-sanity": "^9.8.9",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sanity": "^3.57.4",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "web-vitals": "^5.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "lighthouse": "^12.8.2",
    "typescript": "^5"
  }
}
